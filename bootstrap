# and this notice are preserved.

set -ex
autopoint --force
#gnulib-tool --update
cd man; po4a po4a.conf; cd ..
aclocal -I config
autoheader
automake --add-missing --force-missing --copy
autoconf
cp -p config/COPYING.davfs2 COPYING
cp -p config/INSTALL.davfs2 INSTALL

